<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<websocket:handlers>

  <websocket:mapping handler="echoHandler" path="/echo-ws" />

  <websocket:mapping handler="chatHandler" path="/chat-ws" />
  
  <websocket:mapping handler="chatHandler2" path="/chat-ws2" />

 </websocket:handlers>



 <bean id="echoHandler" class="com.fp.chatroom.EchoHandler" />

 <bean id="chatHandler" class="com.fp.chatroom.ChatWebSocketHandler" />
 
 <bean id="chatHandler2" class="com.fp.chatroom.ChatWebSocketHandler2" />



 <websocket:handlers>

  <websocket:mapping handler="echoHandler" path="/echo.sockjs" />

  <websocket:mapping handler="chatHandler" path="/chat.sockjs" />
  
  <websocket:mapping handler="chatHandler2" path="/chat.sockjs2" />


  <websocket:sockjs />

 </websocket:handlers>



 <mvc:default-servlet-handler />

</beans>
